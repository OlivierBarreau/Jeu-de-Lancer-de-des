{% extends 'base.html.twig' %}
{% block title 'Dice game ' %}

{% block body %}
    <div class="body-content">
        <h2> Dice game </h2>
        <p> Lancer les deux dés à tour de rôle. C'est à vous de jouer : <b> {{ tour }} </b> </p>
    
        <div class="gameInterface">

            <div class="gameInterface-a">
                <div>
                    <p> Joueur : {{ partie.joueur1.pseudo }} </p>
                    <p> Nombre de lancer : {{ partie.joueur1.nombreLancer }} </p>
                    <p> Score : <b id = "scoreJ1" > {{ partie.joueur1.score }} </b> </p>

                </div>

                <div> <img src = {{asset('media/diceRed.png')}} width="200" height="200"> </div>

                <button class="btn btn-dark"> <a href="{{ path('lancerJoueur1')}}" > Lancer </a> </button>
            </div>

            <div class="gameInterface-b">
                <div>
                    <p> Premier dé : <b id="resultDe1"> {{ resultatLancer[0] }} </b> </p>
                    <p> Deuxième dé : <b id="resultDe2"> {{ resultatLancer[1] }} </b> </p>
                </div>

                <div id="animation">
                    <div>
                        <div id ="Gde1"><img src = "{{asset('media/diceOne.png')}}" width="100" height="100"></div>
                        <div id ="Gde2"><img src = "{{asset('media/diceTwo.png')}}"  width="100" height="100"></div>
                        <div id ="Gde3"><img src = "{{asset('media/diceThree.png')}}" width="100" height="100"></div>
                        <div id ="Gde4"><img src = "{{asset('media/diceFour.png')}}" width="100" height="100"></div>
                        <div id ="Gde5"><img src = "{{asset('media/diceFive.png')}}" width="100" height="100"></div>
                        <div id ="Gde6"><img src = "{{asset('media/diceSix.png')}}" width="100" height="100"></div>
                    </div>

                    <div>
                        <div id ="Dde1"><img src = "{{asset('media/diceOne.png')}}" width="100" height="100"></div>
                        <div id ="Dde2"><img src = "{{asset('media/diceTwo.png')}}"  width="100" height="100"></div>
                        <div id ="Dde3"><img src = "{{asset('media/diceThree.png')}}" width="100" height="100"></div>
                        <div id ="Dde4"><img src = "{{asset('media/diceFour.png')}}" width="100" height="100"></div>
                        <div id ="Dde5"><img src = "{{asset('media/diceFive.png')}}" width="100" height="100"></div>
                        <div id ="Dde6"><img src = "{{asset('media/diceSix.png')}}" width="100" height="100"></div>
                    </div>
                </div>

            </div>

            <div class="gameInterface-c">
                <p> Joueur : {{ partie.joueur2.pseudo }} </p>
                <p> Nombre de lancer : {{ partie.joueur2.nombreLancer }} </p>
                <p> Score : <b id = "scoreJ2" > {{ partie.joueur2.score }} </b> </p>
                <div> <img src = "{{asset('media/diceRed.png')}}" width="200" height="200"> </div>
                <button class="btn btn-dark"> <a href="{{ path('lancerJoueur2')}}" >Lancer</a> </button>
            </div>
                
        </div>

        <div class="bg-modal">
            <div class="modal-content">
                
                {#Image par <a href="https://pixabay.com/fr/users/maklay62-182851/?utm_source=link-attribution&amp;utm_medium=referral&amp;utm_campaign=image&amp;utm_content=1432947">S K</a> de <a href="https://pixabay.com/fr/?utm_source=link-attribution&amp;utm_medium=referral&amp;utm_campaign=image&amp;utm_content=1432947">Pixabay</a>#}
                {# Image par <a href="https://pixabay.com/fr/users/mahimzq-17744299/?utm_source=link-attribution&amp;utm_medium=referral&amp;utm_campaign=image&amp;utm_content=5465779">Mahim Rahman</a> de <a href="https://pixabay.com/fr/?utm_source=link-attribution&amp;utm_medium=referral&amp;utm_campaign=image&amp;utm_content=5465779">Pixabay</a>#}
                <div> <img src= {{asset('media/gameOver.png')}} alt="Image game over" width="30%"> </div>
                <p> La partie est terminée </p>
                
                <div class="resultatPartie">
                    <p> <b> {{ partie.vainqueur }} </b> vous avez gagné </p>
                    <p> <b> {{ partie.perdant }} </b> vous avez perdu </p>
                </div>
                    
                <div class='form'>

                    {{ form_start(form) }}
                        <div class="formRow"> {{ form_row(form.nouvellePartie) }} </div>
                        
                        <div class="form-group">
                            <button class="btn btn-primary"> Valider </button>
                        </div>
                    {{ form_end(form) }}
     
                </div>
                
            </div>
        </div>

    </div>

    <script src= {{ asset('js/controlePage.js')}} rel="stylesheet"></script>
{% endblock %}